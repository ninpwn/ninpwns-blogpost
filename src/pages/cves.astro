---

import MainGridLayout from '../layouts/MainGridLayout.astro'

import { getEntry } from 'astro:content'
import { i18n } from '../i18n/translation'
import I18nKey from '../i18n/i18nKey'
import Markdown from '@components/misc/Markdown.astro'

const cvelistPost = await getEntry('spec', 'cves')

const { Content } = await cvelistPost.render()
---
<MainGridLayout title={i18n(I18nKey.cves)} description={i18n(I18nKey.cves)}>
    <div className="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div className="card-base z-10 px-9 py-6 relative w-full">
            <div
                style={{
                    lineHeight: "1.2",
                }}
            >
                <Markdown>
                    <Content />
                </Markdown>
            </div>
        </div>
    </div>
</MainGridLayout>